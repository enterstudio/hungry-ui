doctype html
html
    head
        base(href='.')
        meta(charset='utf-8')
        meta(http-equiv='Cache-Control' content='no-cache, no-store, must-revalidate')
        meta(http-equiv="Pragma" content="no-cache")
        meta(http-equiv="Expires" content="0")
        meta(http-equiv="Vary" content="*")
        title Hungry? UI
        link(rel='shortcut icon' href='static/ico/favicon.ico')
        script(src='static/js/app/libs.js')
        script(src='static/js/app/main.js')
        //script(src='static/js/app/main.min.js')
        link(href='static/bower_components/jquery-ui-bootstrap/jquery.ui.theme.css' rel='stylesheet')

    body(ng-app="hungryUIApp")
        div.container
            .row
                .col-md-12
                    h1 Hungry? UI

                    h2 Venue Lists
                    div(ng-controller="VenueListController as ctrl")

                        span Venue Lists: {{ctrl.venueLists.length}}
                        ul
                            li(ng-repeat="venueList in ctrl.venueLists")
                                span {{venueList.name}} &nbsp;
                                    a(href="javascript:void(0)" ng-click="ctrl.deleteVenueList(venueList)") X

                        h New Venue List
                        form(ng-submit="ctrl.addNewVenueList()")
                            input(type="text" ng-model="ctrl.newVenueList.name" size="30" placeholder="add new venue list name here")
                            input(class="btn-primary" type="submit" value="add")

